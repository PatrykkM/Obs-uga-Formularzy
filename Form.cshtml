@model Dane
@using (Html.BeginForm("Form", "Dane", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <p>Twoje imię: @Html.TextBoxFor(m => m.Imie) @Html.ValidationMessageFor(m => m.Imie)</p>
        <p>Twoje nazwisko: @Html.TextBoxFor(m => m.Nazwisko) @Html.ValidationMessageFor(m => m.Nazwisko)</p>
        <p>Email: @Html.TextBoxFor(m => m.Email, new { type = "email" }) @Html.ValidationMessageFor(m => m.Email)</p>
        <p>Hasło: @Html.TextBoxFor(m => m.Haslo, new { type = "password" }) @Html.ValidationMessageFor(m => m.Haslo)</p>
        <p>Potwierdź hasło: @Html.TextBoxFor(m => m.PotwierdzenieHasla, new { type = "password" }) @Html.ValidationMessageFor(m => m.PotwierdzenieHasla)</p>
        <p>Telefon: @Html.TextBoxFor(m => m.Telefon, new { type = "tel" }) @Html.ValidationMessageFor(m => m.Telefon)</p>
        <p>Wiek: @Html.TextBoxFor(m => m.Wiek) @Html.ValidationMessageFor(m => m.Wiek)</p>
        <p>Miasto:
            @Html.DropDownListFor(m => m.Miasto, new SelectList(new[] { "Warszawa", "Kraków", "Wrocław", "Poznań", "Gdańsk" }), "Wybierz miasto")
            @Html.ValidationMessageFor(m => m.Miasto)
        </p>
        <button type="submit">Zarejestruj</button>
    </div>
}
